<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="calluswibu.ggeznub.Stage1">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/splitBG"
        android:layout_weight="0.5"
        android:background="@drawable/splitbg" />

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnRed"
            android:layout_weight="0.5" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnBlue"
            android:layout_weight="0.5" />

    </LinearLayout>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="0"
                android:id="@+id/blueScore"
                android:textSize="50dp"
                android:textStyle="bold"
                android:layout_marginEnd="19dp"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="false"
                android:layout_gravity="right"
                android:gravity="bottom"
                android:layout_marginBottom="15dp"
                android:autoText="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:baselineAligned="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="0"
                android:id="@+id/redScore"
                android:textSize="50dp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:rotation="180"
                android:gravity="bottom"
                android:textIsSelectable="false"
                android:layout_marginTop="10dp" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:clickable="false"
            android:columnOrderPreserved="true"
            android:rowOrderPreserved="true"
            android:useDefaultMargins="false"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:id="@+id/redCore"
                android:layout_x="213dp"
                android:layout_y="-50dp"
                android:background="#000000"
                android:rotation="110"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:id="@+id/blueCore"
                android:layout_x="90dp"
                android:layout_y="506dp"
                android:background="#000000"
                android:rotation="110" />

        </AbsoluteLayout>

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:clickable="false"
            android:columnOrderPreserved="true"
            android:rowOrderPreserved="true"
            android:useDefaultMargins="false"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/redClick"
                android:rotation="180"
                android:background="@drawable/ff1"
                android:layout_gravity="center"
                android:baselineAlignBottom="false"
                android:layout_x="97dp"
                android:layout_y="69dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blueClick"
                android:background="@drawable/ff1"
                android:layout_gravity="center"
                android:layout_x="113dp"
                android:layout_y="362dp" />

        </AbsoluteLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/cdRed"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:rotation="180"
            android:textSize="100dp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_weight="0.5"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/cdBlue"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="100dp"
            android:textColor="#000000"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:gravity="center" />

    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="7dp"
        android:id="@+id/Time"
        android:background="#000000"
        android:layout_gravity="center" />

</FrameLayout>

