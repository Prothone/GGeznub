<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="calluswibu.ggeznub.Ready">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnRed"
            android:layout_weight="0.5"
            android:background="#ff4545" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnBlue"
            android:layout_weight="0.5"
            android:background="#3668ff" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ready"
            android:id="@+id/tapRed"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:rotation="180"
            android:textSize="30sp"
            android:gravity="bottom"
            android:typeface="sans"
            android:paddingBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ready"
            android:id="@+id/tapBlue"
            android:layout_weight="0.5"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:gravity="bottom"
            android:typeface="sans"
            android:paddingBottom="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="READY!"
            android:id="@+id/readyRed"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:rotation="180"
            android:textSize="70sp"
            android:gravity="bottom"
            android:typeface="sans"
            android:paddingBottom="100dp"
            android:alpha="0"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="READY!"
            android:id="@+id/readyBlue"
            android:layout_weight="0.5"
            android:layout_gravity="center_horizontal"
            android:textSize="70sp"
            android:gravity="bottom"
            android:typeface="sans"
            android:paddingBottom="100dp"
            android:alpha="0"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pointRed"
            android:layout_weight="0.5"
            android:src="@drawable/point"
            android:rotation="180"
            android:layout_gravity="left" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pointBlue"
            android:layout_weight="0.5"
            android:src="@drawable/point"
            android:layout_gravity="right" />
    </LinearLayout>
</FrameLayout>
