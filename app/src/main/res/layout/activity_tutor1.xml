<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="calluswibu.ggeznub.Tutor1">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/splitBG"
        android:layout_weight="0.5"
        android:background="@drawable/splitbg" />

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnRed"
            android:layout_weight="0.5" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnBlue"
            android:layout_weight="0.5" />

    </LinearLayout>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="0"
                android:id="@+id/blueScore"
                android:textSize="60dp"
                android:textStyle="bold"
                android:layout_marginRight="19dp"
                android:layout_marginEnd="19dp"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="false"
                android:layout_gravity="right"
                android:gravity="bottom" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:baselineAligned="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="0"
                android:id="@+id/redScore"
                android:textSize="60dp"
                android:textStyle="bold"
                android:layout_marginEnd="19dp"
                android:layout_marginLeft="20dp"
                android:rotation="180"
                android:gravity="bottom"
                android:paddingRight="20dp" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:clickable="false"
            android:columnOrderPreserved="true"
            android:rowOrderPreserved="true"
            android:useDefaultMargins="false"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:id="@+id/imageView"
                android:layout_x="185dp"
                android:layout_y="95dp"
                android:background="#000000"
                android:rotation="110"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:id="@+id/imageView2"
                android:layout_x="98dp"
                android:layout_y="424dp"
                android:background="#000000"
                android:rotation="110" />

        </AbsoluteLayout>
        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:clickable="false"
            android:columnOrderPreserved="true"
            android:rowOrderPreserved="true"
            android:useDefaultMargins="false"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/redClick"
                android:rotation="180"
                android:background="@drawable/ff1"
                android:layout_gravity="center"
                android:baselineAlignBottom="false"
                android:layout_x="106dp"
                android:layout_y="33dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blueClick"
                android:background="@drawable/ff1"
                android:layout_gravity="center"
                android:layout_x="121dp"
                android:layout_y="283dp" />

        </AbsoluteLayout>

